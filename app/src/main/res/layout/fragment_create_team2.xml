<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_create_team2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/hf_light_blue"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/create_emblem"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgEmblem"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@color/white" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_light_blue_rounded_corners"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="35dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/shape"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="27">

                        <Button
                            android:id="@+id/btnPreviousShape"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_left_pink" />

                        <ImageView
                            android:id="@+id/imgShape1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@drawable/background_white_border_black"
                            android:scaleType="fitXY"
                            android:src="@drawable/emblem_shape_1" />

                        <ImageView
                            android:id="@+id/imgShape2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@drawable/background_white_border_black"
                            android:scaleType="fitXY"
                            android:src="@drawable/emblem_shape_2" />

                        <ImageView
                            android:id="@+id/imgShape3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@drawable/background_white_border_black"
                            android:scaleType="fitXY"
                            android:src="@drawable/emblem_shape_3" />

                        <ImageView
                            android:id="@+id/imgShape4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@drawable/background_white_border_black"
                            android:scaleType="fitXY"
                            android:src="@drawable/emblem_shape_4" />

                        <ImageView
                            android:id="@+id/imgShape5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@drawable/background_white_border_black"
                            android:scaleType="fitXY"
                            android:src="@drawable/emblem_shape_5" />

                        <Button
                            android:id="@+id/btnNextShape"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_right_pink" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/color"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="27">

                        <Button
                            android:id="@+id/btnPreviousShapeColor"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_left_pink" />

                        <ImageView
                            android:id="@+id/imgShapeColor1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@color/hf_blue"
                            android:scaleType="fitXY"
                           />

                        <ImageView
                            android:id="@+id/imgShapeColor2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@color/tag_red"
                            android:scaleType="fitXY"
                           />

                        <ImageView
                            android:id="@+id/imgShapeColor3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@color/white"
                            android:scaleType="fitXY"
                           />

                        <ImageView
                            android:id="@+id/imgShapeColor4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@color/hf_green"
                            android:scaleType="fitXY"
                         />

                        <ImageView
                            android:id="@+id/imgShapeColor5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="5"
                            android:background="@color/hf_turquoise"
                            android:scaleType="fitXY"
                         />

                        <Button
                            android:id="@+id/btnNextShapeColor"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_right_pink" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>