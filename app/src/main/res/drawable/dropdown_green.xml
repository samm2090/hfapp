<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="7dp" />
                    <stroke android:width="1dp" android:color="@color/hf_green" />
                    <size android:height="15dp"/>
                    <solid android:color="@color/hf_light_green" />
                </shape>
            </item>
            <item android:right="10dp">
                <bitmap android:gravity="right" android:src="@drawable/icon_dropdown" android:tint="@color/hf_green"/>
            </item>
        </layer-list>
    </item>
</selector>
